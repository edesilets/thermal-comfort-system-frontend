<div class="container-fluid">

  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Forms</h1>
      <ol class="breadcrumb">
        <li>
          <i class="fa fa-dashboard"></i> <a href="index.html">Dashboard</a>
        </li>
        <li class="active">
          <i class="fa fa-edit"></i>Rules
        </li>
        <li class="active">
          <i class="fa fa-edit"></i> Create rule
        </li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      <form role="newRule">
        <div class="form-group">
          <label>Rule Name</label>
          <input name="rule[name]" class="form-control">
          <p class="help-block">Example: Boiler Over Heating</p>
        </div>
        <div class="form-group">
          <label>Temperature</label>
          <input name="rule[temperature]" class="form-control" placeholder="Enter a tempature">
        </div>
        <div class="form-group">
          <label>Operator</label>
          <select name="rule[operator]" class="form-control">
            <option><</option>
            <option>></option>
            <option><=</option>
            <option>>=</option>
          </select>
        </div>
        <div class="form-group">
          <label>Actions</label>
          <select name="rule[action]" class="form-control">
            <option>pumpOn</option>
            <option>PumpOff</option>
          </select>
        </div>
        <div class="form-group">
          <label>Active</label>
          <select name="rule[active]" class="form-control">
            <option value="T">Yes</option>
            <option value="F">No</option>
          </select>
        </div>
      </form>
      <div>
        <button class="btn btn-primary btn-md" name="createRule">
          Create Rule
        </button>
      </div>
      <div class="col-lg-4"></div>
    </div>
  </div>
</div>
<!-- /.row -->

</div>
<!-- /.container-fluid -->

</div>
