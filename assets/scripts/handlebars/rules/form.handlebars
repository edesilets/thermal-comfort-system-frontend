<div class="container-fluid">

  <!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Forms</h1>
      <ol class="breadcrumb">
        <li>
          <i class="fa fa-dashboard"></i> <a href="index.html">Dashboard</a>
        </li>
        <li class="active">
          <i class="fa fa-edit"></i>Rules
        </li>
        <li class="active">
          <i class="fa fa-edit"></i> Create rule
        </li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4">
      {{#if this.rule}}
        <form role="updateRule">
      {{else}}
        <form role="newRule">
      {{/if}}
      <form role="newRule">
        <div class="form-group">
          <label>Rule Name</label>
          <input name="rule[name]" class="form-control"  value="{{this.rule.name}}">
          <p class="help-block">Example: Boiler Over Heating</p>
        </div>
        <div class="form-group">
          <label>Temperature</label>
          <input name="rule[temperature]" class="form-control" value="{{this.rule.temperature}}">
        </div>
        <div class="form-group">
          <label>Operator</label>
          <select name="rule[operator]" class="form-control">
            {{#if this.rule}}
              <option value="{{this.rule.operator}}">Current Value: {{this.rule.operator}}</option>
            {{else}}
            {{/if}}
            <option><</option>
            <option>></option>
            <option><=</option>
            <option>>=</option>
          </select>
        </div>
        <div class="form-group">
          <label>Actions</label>
          <select name="rule[action]" class="form-control">
            {{#if this.rule}}
              <option value="{{this.rule.action}}">Current Value: {{this.rule.action}}</option>
            {{else}}
            {{/if}}
            <option>pumpOn</option>
            <option>PumpOff</option>
          </select>
        </div>
        <div class="form-group">
          <label>Active</label>
          <select name="rule[active]" class="form-control">
            {{#if this.rule}}
              <option value="{{this.rule.active}}">Current Value: {{this.rule.active}}</option>
            {{else}}
            {{/if}}
            <option value="T">Yes</option>
            <option value="F">No</option>
          </select>
        </div>
      </form>
      <div>
        {{#if this.rule}}
          <button class="btn btn-primary btn-md" name="updateRule">
            Update Rule
          </button>
        {{else}}
          <button class="btn btn-primary btn-md" name="createRule">
            Create Rule
          </button>
        {{/if}}
      </div>
      <div class="col-lg-4"></div>
    </div>
  </div>
</div>
<!-- /.row -->

</div>
<!-- /.container-fluid -->

</div>
